{
  "compilerOptions": {
    "composite": true,
    "tsBuildInfoFile": "./node_modules/.tmp/tsconfig.node.tsbuildinfo",
    "skipLibCheck": true,
    "module": "ESNext",
    "moduleResolution": "bundler",
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "noEmit": true,
    /* Custom */
    "types": ["node"],
    "baseUrl": "./src/fsd",
    "paths": {
      "~app": ["./app"],
      "~pages": ["./pages"],
      "~features": ["./features"],
      "~entities": ["./entities"],
      "~shared": ["./shared"]
    }
  },
  "include": ["vite.config.ts"]
}
